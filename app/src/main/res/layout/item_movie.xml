<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="115dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/greyis"
        android:layout_weight="10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/icon_filme"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/l_filme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/l_Cinema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/l_Avaliacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/l_erase"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:clickable="true"
                android:shadowColor="@color/greyis"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="20"
                android:layout_marginTop="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="-5dp"
                android:textColor="#fff"
                android:text="@string/d_editar"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:focusable="true"
                />
            <TextView
                android:id="@+id/l_edit"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/black"
                android:clickable="true"
                android:shadowColor="@color/greyis"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:shadowDx="-1"
                android:shadowDy="-1"
                android:shadowRadius="20"
                android:text="@string/d_eliminar"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textStyle="bold"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>